<div class="container well"> 
<div class="span3">
    <h3>New Role</h3>
	<%= form_for(@role, :validate => true, :html => {:class=> "form-horizontal" }) do |f| %>	
		
		<fieldset>	
			<!-- role-name input-->
		    <div class="control-group">
		        <%= f.label :name, :class=> "control-label" %>
		        <div class="controls">
					<%= f.text_field :name, :class=> "input-xlarge", :placeholder=> "Ex. Chitresh Goyal" %>
		            <p class="help-block"></p>
		        </div>
		    </div>
		</fieldset>
		
		<%= f.submit "Submit", :class=> "btn btn-primary pull-right" %>
		<div class="clearfix"></div>
	<% end %>
</div>
</div>