<%= form_for(@feature, :html => {:class=> "form-horizontal" }) do |f| %>
<%= render "shared/error_messages", :target => @feature %>

	<!-- feature-name input-->
    <div class="control-group">
        <%= f.label :name, :class=> "control-label" %>
        <div class="controls">
			<%= f.text_field :name, :class=> "input-xlarge", :placeholder=> "Assign user Role" %>
            <p class="help-block"></p>
        </div>
    </div>

  <div class="actions">
    <%= f.submit "Submit", :class=> "btn btn-primary pull-right" %>
  </div>
<% end %>

