<%= form_for(@product ,:html => {:class=> "form-horizontal" }) do |f| %>
<fieldset>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	
	<!-- Product-name input-->
    <div class="control-group">
        <%= f.label :name, :class=> "control-label" %>
        <div class="controls">
			<%= f.text_field :name, :class=> "input-xlarge", :placeholder=> "Ex. Nokia 5233" %>
            <p class="help-block"></p>
        </div>
    </div>

	<!-- Brand-name input-->
    <div class="control-group">
        <%= f.label :brand, :class=> "control-label" %>
        <div class="controls">
			<%= f.text_field :brand, :class=> "input-xlarge", :placeholder=> "Ex. Nokia" %>
            <p class="help-block"></p>
        </div>
    </div>

	<!-- Price input-->
    <div class="control-group">
        <%= f.label :price, :class=> "control-label" %>
        <div class="controls">
			<%= f.text_field :price, :class=> "input-xlarge", :placeholder=> "Ex. 7200.56" %>
            <p class="help-block"></p>
        </div>
    </div>
	
	<!-- quantity input-->
    <div class="control-group">
        <%= f.label :quantity, :class=> "control-label" %>
        <div class="controls">
			<%= f.text_field :quantity, :class=> "input-xlarge", :placeholder=> "Ex. 24" %>
            <p class="help-block"></p>
        </div>
    </div>
	
	<!-- SKU input-->
    <div class="control-group">
        <%= f.label :sku, :class=> "control-label" %>
        <div class="controls">
			<%= f.text_field :sku, :class=> "input-xlarge", :placeholder=> "Ex. 123" %>
            <p class="help-block"></p>
        </div>
    </div>
	
    <%= f.submit "Submit", :class=> "btn btn-primary pull-right" %>
  
</fieldset>  
<% end %>
