<h3>Assign role users</h3>

<%#= link_to "New user", new_user_path, :class=>"btn btn-primary" %>
<div class="well">
    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Login</th>
          <th>Email</th>
          <th>Role</th>
          <th>Last Login</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
		<% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name.capitalize %></td>
          <td><%= user.login %></td>
          <td><%= user.email %></td>
          <td><%#= user.role.name %>
          	<%= form_for(user, :validate => true, :html => {:class=> "form-horizontal" }) do |f| %>
          	
          	<%#= select_tag user, options_from_collection_for_select(@roles,"id","name"), :selected => user.role.name, :class => 'cmbbook' %>
<%#= f.select(:name, options_for_select([['Basic', 'basic'], ['Premium', 'premium']], :selected => params[:name])) %>
			<%= f.collection_select :role_id, @roles, :id, :name, :prompt => true %>

			<% end %>
          </td>
          <td><%= user.last_login_at %></td>
          <td><%#= link_to "#{user.name} #{user.sku}", chitresh_url(:name=>"#{user.name}", :id=>"#{user.id}") %>
			  <%= link_to(user_path(user)) do %>
			  <i class="icon-eye-open icon-black"></i>
			  <% end %>
			  <%= link_to(edit_user_path(user)) do %>
			  <i class="icon-edit icon-black"></i>
			  <% end %>
			  <%= link_to(user, method: :delete, data: { confirm: 'Are you sure?' }) do %>
			  <i class="icon-trash"></i>
			  <% end %>	
          </td>
        </tr>
		<% end %>
      </tbody>
    </table>
</div>